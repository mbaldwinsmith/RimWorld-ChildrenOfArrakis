<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>Arrakis_Windtrap</defName>
    <label>windtrap</label>
    <description>Wind-driven condenser that harvests trace moisture and pipes it into nearby catchbasins. Built to survive the open dunes.</description>
    <thingClass>Building</thingClass>
    <size>(1,1)</size>
    <graphicData>
      <texPath>Things/Building/Temperature/Vent</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <costStuffCount>120</costStuffCount>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>30</pathCost>
    <fillPercent>0.7</fillPercent>
    <selectable>true</selectable>
    <seeThroughFog>true</seeThroughFog>
    <rotatable>true</rotatable>
    <designationCategory>Production</designationCategory>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
    <statBases>
      <WorkToBuild>3200</WorkToBuild>
      <MaxHitPoints>260</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>-7</Beauty>
      <Mass>60</Mass>
    </statBases>
    <building>
      <isEdifice>true</isEdifice>
      <ai_combatDangerous>false</ai_combatDangerous>
    </building>
    <comps>
      <li Class="ChildrenOfArrakis.CompProperties_Windtrap">
        <waterPerDay>12</waterPerDay>
        <outputRadius>12</outputRadius>
        <outdoorsOnly>true</outdoorsOnly>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>Arrakis_Catchbasin</defName>
    <label>catchbasin</label>
    <description>Buried reservoir that stores condensed water. Pawns can sip directly or draw from it to refill literjons.</description>
    <thingClass>Building</thingClass>
    <size>(2,2)</size>
    <graphicData>
      <texPath>Placeholders/Single</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <costList>
      <Steel>90</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.7</fillPercent>
    <selectable>true</selectable>
    <seeThroughFog>true</seeThroughFog>
    <rotatable>true</rotatable>
    <designationCategory>Misc</designationCategory>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>280</MaxHitPoints>
      <Flammability>0.8</Flammability>
      <Beauty>-6</Beauty>
      <Mass>85</Mass>
    </statBases>
    <comps>
      <li Class="ChildrenOfArrakis.CompProperties_WaterTank">
        <capacity>320</capacity>
        <initialWater>15</initialWater>
        <sipAmount>5</sipAmount>
      </li>
    </comps>
    <building>
      <isEdifice>true</isEdifice>
      <ai_combatDangerous>false</ai_combatDangerous>
    </building>
  </ThingDef>

</Defs>
